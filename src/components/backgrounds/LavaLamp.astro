<div class="fixed top-0 bottom-0 left-0 right-0 pointer-events-none print:hidden z-[-1] bg-[#fcfcfc] dark:bg-[#050505] overflow-hidden transition-colors duration-500">
  <div class="absolute inset-0 opacity-30 dark:opacity-20">
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>
    <div class="blob blob-3"></div>
  </div>
  <!-- Grid overlay for "School/Frutiger" vibe -->
  <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-[0.03] dark:opacity-[0.05]"></div>
</div>

<style>
  .blob {
    position: absolute;
    filter: blur(80px);
    border-radius: 50%;
    animation: float 20s infinite ease-in-out alternate;
  }

  .blob-1 {
    top: 10%;
    left: 20%;
    width: 40vw;
    height: 40vw;
    background: #00f3ff; /* Cyan */
    animation-delay: 0s;
  }

  .blob-2 {
    top: 40%;
    right: 10%;
    width: 35vw;
    height: 35vw;
    background: #bc13fe; /* Purple */
    animation-delay: -5s;
  }

  .blob-3 {
    bottom: 10%;
    left: 30%;
    width: 45vw;
    height: 45vw;
    background: #ff007f; /* Pink */
    animation-delay: -10s;
  }

  @keyframes float {
    0% { transform: translate(0, 0) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
    100% { transform: translate(0, 0) scale(1); }
  }
</style>
