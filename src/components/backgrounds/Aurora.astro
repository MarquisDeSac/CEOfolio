<div class="fixed top-0 bottom-0 left-0 right-0 pointer-events-none print:hidden z-[-1] bg-[#050510] overflow-hidden">
  <div class="aurora-container absolute inset-0 opacity-40">
    <div class="aurora aurora-1"></div>
    <div class="aurora aurora-2"></div>
    <div class="aurora aurora-3"></div>
  </div>
   <!-- Stars overlay -->
   <div class="absolute inset-0 bg-[url('/noise.png')] opacity-[0.05]"></div>
</div>

<style>
  .aurora {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 200vw;
    height: 200vw;
    transform: translate(-50%, -50%);
    background: radial-gradient(circle at center, transparent 30%, var(--color) 60%, transparent 80%);
    filter: blur(60px);
    opacity: 0.6;
    animation: aurora-move 20s infinite linear;
  }

  .aurora-1 {
    --color: #2b1055; /* Deep Purple */
    animation-duration: 25s;
    animation-direction: normal;
  }

  .aurora-2 {
    --color: #004d40; /* Teal/Dark Green */
    width: 150vw;
    height: 150vw;
    animation-duration: 35s;
    animation-direction: reverse;
  }

  .aurora-3 {
    --color: #0d47a1; /* Deep Blue */
    width: 180vw;
    height: 180vw;
    animation-duration: 30s;
    animation-direction: normal;
  }

  @keyframes aurora-move {
    0% { transform: translate(-50%, -50%) rotate(0deg) scale(1); }
    50% { transform: translate(-50%, -50%) rotate(180deg) scale(1.1); }
    100% { transform: translate(-50%, -50%) rotate(360deg) scale(1); }
  }
</style>
