<div class="fixed top-0 bottom-0 left-0 right-0 pointer-events-none print:hidden z-[-1] bg-[#020205] overflow-hidden">
  <canvas id="starfield-canvas" class="w-full h-full"></canvas>
</div>

<script>
  function initStarfield() {
    const canvas = document.getElementById('starfield-canvas') as HTMLCanvasElement
    if (!canvas) return

    const ctx = canvas.getContext('2d')
    if (!ctx) return

    let width = window.innerWidth
    let height = window.innerHeight
    let centerX = width / 2
    let centerY = height / 2

    canvas.width = width
    canvas.height = height

    const stars: { x: number, y: number, z: number, o: number }[] = []
    const starCount = 400
    const speed = 0.5

    for (let i = 0; i < starCount; i++) {
      stars.push({
        x: (Math.random() - 0.5) * width * 2,
        y: (Math.random() - 0.5) * height * 2,
        z: Math.random() * width,
        o: Math.random()
      })
    }

    function draw() {
      ctx.fillStyle = '#020205' // Deep dark blue/black
      ctx.fillRect(0, 0, width, height)

      for (const star of stars) {
        star.z -= speed

        if (star.z <= 0) {
          star.x = (Math.random() - 0.5) * width * 2
          star.y = (Math.random() - 0.5) * height * 2
          star.z = width
          star.o = Math.random()
        }

        const x = (star.x - centerX) * (width / star.z) + centerX
        const y = (star.y - centerY) * (width / star.z) + centerY
        const s = (width / star.z)

        // PS2 boot vibe: slight blue/purple tint, glowing
        ctx.beginPath()
        ctx.fillStyle = `rgba(200, 220, 255, ${star.o})`
        ctx.shadowBlur = s * 2
        ctx.shadowColor = 'rgba(60, 100, 255, 0.5)'
        ctx.arc(x, y, s < 0 ? 0 : s, 0, Math.PI * 2)
        ctx.fill()
        ctx.shadowBlur = 0
      }

      requestAnimationFrame(draw)
    }

    window.addEventListener('resize', () => {
      width = window.innerWidth
      height = window.innerHeight
      centerX = width / 2
      centerY = height / 2
      canvas.width = width
      canvas.height = height
    })

    draw()
  }

  document.addEventListener('astro:page-load', initStarfield)
  initStarfield()
</script>
