<div class="fixed top-0 bottom-0 left-0 right-0 pointer-events-none print:hidden z-[-1] bg-white dark:bg-[#050505] transition-colors duration-500 overflow-hidden">
  <canvas id="constellation-canvas" class="w-full h-full"></canvas>
</div>

<script>
  function initConstellation() {
    const canvas = document.getElementById('constellation-canvas') as HTMLCanvasElement
    if (!canvas) return

    const ctx = canvas.getContext('2d')!
    if (!ctx) return

    let width = window.innerWidth
    let height = window.innerHeight

    canvas.width = width
    canvas.height = height

    interface Point {
      x: number
      y: number
      vx: number
      vy: number
      color?: string
    }

    const points: Point[] = []
    const count = 80
    
    // Colors
    const DARK_COLORS = ['#ff007f', '#00f3ff', '#bc13fe']
    const LIGHT_COLORS = ['#d10068', '#00abc0', '#8b0eec']
    
    function getColors() {
       return document.documentElement.classList.contains('dark') ? DARK_COLORS : LIGHT_COLORS
    }
    
    function getLineColor() {
       return document.documentElement.classList.contains('dark') ? 'rgba(188, 19, 254, ' : 'rgba(139, 14, 236, '
    }

    // Init Points with fixed colors
    function initPoints() {
        points.length = 0
        const colors = getColors()
        for (let i = 0; i < count; i++) {
            points.push({
                x: Math.random() * width,
                y: Math.random() * height,
                vx: (Math.random() - 0.5) * 0.5,
                vy: (Math.random() - 0.5) * 0.5,
                // Assign a persistent color to each dot
                color: colors[Math.floor(Math.random() * colors.length)]
            })
        }
    }
    initPoints()

    function draw() {
      ctx.clearRect(0, 0, width, height)

      // Updates
      for (const p of points) {
        p.x += p.vx
        p.y += p.vy

        // Bounce
        if (p.x < 0 || p.x > width) p.vx *= -1
        if (p.y < 0 || p.y > height) p.vy *= -1
      }

      // Draw Connections first
      ctx.lineWidth = 1
      const lineBase = getLineColor()
      
      for (let i = 0; i < count; i++) {
        for (let j = i + 1; j < count; j++) {
          const dx = points[i].x - points[j].x
          const dy = points[i].y - points[j].y
          const dist = Math.sqrt(dx * dx + dy * dy)

          if (dist < 150) {
            const alpha = 1 - dist / 150
            // Use the purple line color but maybe blend? Just standard for now.
            ctx.strokeStyle = `${lineBase}${alpha * 0.5})` 
            ctx.beginPath()
            ctx.moveTo(points[i].x, points[i].y)
            ctx.lineTo(points[j].x, points[j].y)
            ctx.stroke()
          }
        }
      }

      // Draw Points
      for (const p of points) {
        ctx.beginPath()
        ctx.fillStyle = (p as Point & { color: string }).color
        ctx.arc(p.x, p.y, 2, 0, Math.PI * 2)
        ctx.fill()
      }

      requestAnimationFrame(draw)
    }

    window.addEventListener('resize', () => {
        width = window.innerWidth
        height = window.innerHeight
        canvas.width = width
        canvas.height = height
        initPoints()
    })
    
     // Handle Theme Change
    const observer = new MutationObserver(() => {
       initPoints()
    })
    observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] })

    draw()
  }

  document.addEventListener('astro:page-load', initConstellation)
  initConstellation()
</script>
