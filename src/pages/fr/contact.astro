---
import StandardLayout from '~/layouts/StandardLayout.astro'
import BaseLayout from '~/layouts/BaseLayout.astro'

const title = "Contact"
const subtitle = "DÃ©marrons une collaboration"
---

<BaseLayout
  title={title}
  description={subtitle}
  bgType="night-drive"
  ogImage={false}
>
  <StandardLayout
    title={title}
    subtitle={subtitle}
    isCentered={true}
    articleClass="max-w-2xl!"
  >
    <div slot="article" class="py-10">
      
      <div class="p-8 rounded-2xl bg-black/5 dark:bg-white/5 border border-black/10 dark:border-white/10">
        <form action="https://api.web3forms.com/submit" method="POST" class="space-y-6">
            
            <input type="hidden" name="access_key" value="94023306-55a8-4c35-bccb-fdc26545a112">

            <!-- Name -->
            <div class="flex flex-col gap-2">
                <label for="name" class="text-sm font-bold uppercase tracking-widest opacity-70">Nom</label>
                <input type="text" name="name" id="name" required class="px-4 py-3 rounded-lg bg-white/50 dark:bg-black/20 border border-black/10 dark:border-white/10 focus:border-neon-blue focus:outline-none transition-colors" placeholder="Votre nom" />
            </div>

            <!-- Email -->
            <div class="flex flex-col gap-2">
                <label for="email" class="text-sm font-bold uppercase tracking-widest opacity-70">Email</label>
                <input type="email" name="email" id="email" required class="px-4 py-3 rounded-lg bg-white/50 dark:bg-black/20 border border-black/10 dark:border-white/10 focus:border-neon-blue focus:outline-none transition-colors" placeholder="votre@email.com" />
            </div>

            <!-- Message -->
            <div class="flex flex-col gap-2">
                <label for="message" class="text-sm font-bold uppercase tracking-widest opacity-70">Message</label>
                <textarea name="message" id="message" rows="5" required class="px-4 py-3 rounded-lg bg-white/50 dark:bg-black/20 border border-black/10 dark:border-white/10 focus:border-neon-blue focus:outline-none transition-colors resize-none" placeholder="Parlons de votre projet..."></textarea>
            </div>

             <!-- Honeypot -->
             <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

            <button type="submit" class="w-full py-4 rounded-lg bg-neon-blue/10 border border-neon-blue/30 text-neon-blue font-bold hover:bg-neon-blue hover:text-black transition-all">
                Envoyer le message
            </button>
            
            <p class="text-xs text-center opacity-50 mt-4">
                Powered by Web3Forms. No backend required.
            </p>
        </form>
      </div>

    </div>
  </StandardLayout>
</BaseLayout>
